<div class="band">	
	<div class="container">
		<div class="row">
			<div class="col-lg-10">
				<p>New Post</p>
			</div>
		</div>
	</div>
</div>
<div class="form-container">
	<div class="form-box post">
		<h2>New Post</h2>
		<%= bootstrap_form_for(@post, layout: :horizontal, control_col: "col-sm-12") do |f| %>
		<!-- <p><font size="4">カテゴリー</font></p> -->
			<%= f.collection_select :category_id, Category.all.order("name"), :id, :name, hide_label: true, :prompt => "カテゴリーを選択してください" %>
		<!-- <p><font size="4">内容</font></p> -->
			<%= f.text_area :body, hide_label: true, placeholder: "内容を入力してください" %>

			<%= f.submit "投稿", :class => "submit-btn"%>
			<%= link_to '戻る', :back, :class => "back-btn" %>
		<% end %>
	</div>
</div>