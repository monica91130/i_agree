<div class="band">  
  <div class="container">
    <div class="row">
      <div class="col-lg-10">
        <p>User Index</p>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>no.</th>
            <th>image</th>
            <th>name</th>
            <th>age</th>
            <th>gender</th>
            <th>profession</th>
          </tr>
        </thead>
        <% @users.each do |user| %>
        <tbody>
          <tr>
            <td><%= user.id %></td>
            <td><%= attachment_image_tag user, :image, size: '30x30', format: 'jpeg', class: "", fallback: "no_image.jpeg", alt: "No image" %></td>
            <td><%= link_to user.name, category_path(user.id) %></td>
            <td><%= user.age %></td>
            <td><%= user.gender_i18n %></td>
            <td><%= user.profession %></td>
            <td><%= link_to "編集", edit_user_path(user.id) %></td>
            <td><%= link_to "削除", user_path(user.id),method: :delete,  data: { confirm: '退会させてよろしいですか？' } %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>